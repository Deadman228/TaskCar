@model IEnumerable<Car.Models.Model>

@{
    ViewData["Title"] = "Brand list";
}
<h1>@ViewData["Title"]</h1>

<p>Brand list.</p>

<table class="table table-striped table-bordered dt-responsive nowrap table-sbm" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Brand ID</th>
            <th>Brand Name</th>
            <th>Model Active</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var a in (List<Car.Models.Brand>)ViewBag.ku)
            {


                if (a.active == false)
                {
                    <tr style="background: #808080;">
                        <td>@a.id</td>
                        <td>@a.name</td>
                        <td>@a.active</td>
                        <!--<td>
                            <br sessionStorage.setItem('id', 'a.id' ) />
                             <a asp-area="" asp-controller="Edit"  asp-action="editlist">Изменить</a>-->
@**@                        <!--</td>-->

                    </tr>
                }
                else
                {
                    <tr>
                        <td>@a.id</td>
                        <td>@a.name</td>
                        <td>@a.active</td>
                        <!--<td>
                            <br sessionStorage.setItem('id', 'a.id' ) />
                             <a asp-area="" asp-controller="Edit"  asp-action="editlist">Изменить</a>-->
@**@                        <!--</td>-->

                    </tr>
                }


            }
        }

        
    </tbody>

</table>


<form method="post" asp-action="brandlist" asp-route-returnurl="@ViewData["https://localhost:44367/Model/brandlist"]">
    <p>Добавление</p>
    <label>Бренд:</label><br />
    <input type="text" name="login" /><br /><br />
    <select name="active">
        <option value="true">true</option>
        <option value="false">false</option>
    </select><br /><br />
    <input type="submit" value="Отправить" />
</form>

<p>Редактирование</p>
<form method="post" asp-action="Edit" asp-route-returnurl="@ViewData["https://localhost:44367/Model/brandlist"]">
    <label>Бренд:</label><br />
    <select name="number">
        @{
            foreach (var a in (List<Car.Models.Brand>)ViewBag.ku)
            {
                <option value="@a.id">@a.id</option>
            }
        }
    </select><br /><br />
    <label>Бренд:</label><br />
    <input type="text" name="name" /><br /><br />
    <select name="active">
        <option value="true">true</option>
        <option value="false">false</option>
    </select><br /><br />
    <input type="submit" value="Отправить" />
</form>





