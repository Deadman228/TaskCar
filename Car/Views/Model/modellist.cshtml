<form method="post" asp-action="modellist" asp-route-returnurl="@ViewData["https://localhost:44367/Model/modellist"]">
    <p>Добавление</p>
    <label>Бренд:</label><br />
    <select name="brandid">
        @{
            foreach (var a in (List<Car.Models.Brand>)ViewBag.kul)
            {
                <option value="@a.id">@a.name</option>
            }
        }
    </select><br /><br />
    <label>Модель:</label><br />
    <input type="text" name="login" /><br /><br />
    <select name="active">
        <option value="true">true</option>
        <option value="false">false</option>
    </select><br /><br />
    <input type="submit" value="Отправить" />
</form>

<table class="table table-striped table-bordered dt-responsive nowrap table-sbm" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Model ID</th>
            <th>Model Name</th>
            <th>Model BrandID</th>
            <th>Model Active</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var a in (List<Car.Models.Model>)ViewBag.users)
            {


                if (a.active == false)
                {
                    <tr style="background: #808080;">
                        <td>@a.id</td>
                        <td>@a.name</td>
                        <td>@a.brandid</td>
                        <td>@a.active</td>
                        <td>
                            <br sessionStorage.setItem('id', '@a.id' ) />
                            @* <a asp-area="" asp-controller="Edit"  asp-action="editlist">Изменить</a>*@
                        </td>

                    </tr>
                }
                else
                {
                    <tr>
                        <td>@a.id</td>
                        <td>@a.name</td>
                        <td>@a.brandid</td>
                        <td>@a.active</td>
                        <td>
                            <br sessionStorage.setItem('id', '@a.id' ) />
                            @* <a asp-area="" asp-controller="Edit"  asp-action="editlist">Изменить</a>*@
                        </td>

                    </tr>
                }


            }
        }

        
    </tbody>

</table>


